<body class="bg-light">

    <div class="container">
        <div class="row align-content-center">
            <div class="col-md-8 order-md-1">
                <h4 class="col-md-6 mb-3 pl-5">Formulario de registro de Empresa</h4>
                <form class="needs-validation" novalidate>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label>Nombre Empresa</label>
                            <input type="text" class="form-control" name="nombre_empresa" id="nombre_empresa" placeholder="Introduzca nombre de la empresa" value="" required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Email
                            </label>
                            <input type="email" class="form-control" name="email_empresa" id="email_empresa" placeholder="you@example.com" required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Contraseña</label>
                            <input type="password" class="form-control" name="password_empresa" id="password_empresa" placeholder="Introduzca al menos 6 caracteres"
                                value="" required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Confirmar Contraseña</label>
                            <input type="password" class="form-control" name="repassword_empresa" id="repassword_empresa" placeholder="Repita su contraseña" value=""
                                required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Telefono</label>
                            <input type="number" class="form-control" name="telefono_empresa" id="telefono_empresa" placeholder="Introduzca su numero de teléfono" value=""
                                required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Direccion</label>
                            <input type="text" class="form-control" name="direccion_empresa" id="direccion_empresa" placeholder="Introduzca su dirección" value="" required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Provincia</label>
                            <input type="text" class="form-control" name="provincia_empresa" id="provincia_empresa" placeholder="Introduzca su Provincia" value="" required>

                        </div>
                        <div class="col-md-6 mb-3">
                            <label>Localidad</label>
                            <input type="text" class="form-control" name="localidad_empresa" id="localidad_empresa" placeholder="Introduzca su localidad" value="" required>

                        </div>
                    </div>


                    <button class="btn btn-primary btn-lg btn-block" type="submit" id="registrar_empresa">Registrarse</button>
                </form>
            </div>
        </div>
    </div>
</body>